<nav>
  <%= button_to 'Book Store Pro', store_index_path, class: "book-title-logo" %>

  <aside>
    <%= form_tag store_index_path, class: 'locale' do %>
      <%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s), onchange: 'this.form.submit()' %>
      <%= submit_tag 'submit', id: "submit_locale_change" %>
    <% end %>
  </aside>

  <% if !session["user_id"] %>

    <div>
      <%= button_to 'Sign Up', new_user_path, class: "btn-signup", method: :get %>
      <%= button_to 'Login', login_path, class: "btn-login", method: :get %>
    </div>

  <% else %>

    <div>
      <% user = User.find_by(id: session[:user_id]) %>
      <div class="hello-user">
        Hello, <%= user.name %>
      </div>
    </div>

  <% end %>

</nav>